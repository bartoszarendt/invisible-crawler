# Environment identity
APP_ENV=dev
CRAWL_PROFILE=conservative

# Core services (bundled docker-compose defaults)
DATABASE_URL=postgresql://invisible:invisible@postgres:5432/invisible
REDIS_URL=redis://redis:6379/0
POSTGRES_DB=invisible
POSTGRES_USER=invisible
POSTGRES_PASSWORD=invisible

# Queue namespace (recommended to bump on major scheduler/request format changes)
QUEUE_NAMESPACE=

# Crawl behavior
CRAWLER_USER_AGENT=InvisibleCrawler/0.1 (Web crawler for image discovery research; contact=you@example.com)
CRAWLER_MAX_PAGES=10
DISCOVERY_REFRESH_AFTER_DAYS=0
DOMAIN_STATS_FLUSH_INTERVAL_PAGES=100
IMAGE_MIN_WIDTH=256
IMAGE_MIN_HEIGHT=256
LOG_LEVEL=INFO

# Scrapy tuning overrides (leave empty to use profile defaults)
SCRAPY_CONCURRENT_REQUESTS=
SCRAPY_CONCURRENT_REQUESTS_PER_DOMAIN=
SCRAPY_DOWNLOAD_DELAY=
SCRAPY_RANDOMIZE_DOWNLOAD_DELAY=true
SCRAPY_AUTOTHROTTLE_ENABLED=true
SCRAPY_AUTOTHROTTLE_START_DELAY=
SCRAPY_AUTOTHROTTLE_MAX_DELAY=
SCRAPY_AUTOTHROTTLE_TARGET_CONCURRENCY=
SCRAPY_DOWNLOAD_TIMEOUT=
SCRAPY_RETRY_ENABLED=true
SCRAPY_RETRY_TIMES=

# Optional/future object storage (reserved for Phase 3)
OBJECT_STORE_ENDPOINT=http://localhost:9000
OBJECT_STORE_BUCKET=invisible-images
OBJECT_STORE_ACCESS_KEY=change-me
OBJECT_STORE_SECRET_KEY=change-me
OBJECT_STORE_REGION=us-east-1
OBJECT_STORE_SECURE=false
