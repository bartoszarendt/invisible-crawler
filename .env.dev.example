# Environment identity
APP_ENV=dev
CRAWL_PROFILE=conservative

# Core services (docker-compose defaults)
DATABASE_URL=postgresql://invisible:invisible@postgres:5432/invisible
REDIS_URL=redis://redis:6379/0
POSTGRES_DB=invisible
POSTGRES_USER=invisible
POSTGRES_PASSWORD=invisible
QUEUE_NAMESPACE=dev-v1

# Crawl behavior
CRAWLER_USER_AGENT=InvisibleCrawler/0.1 (Dev crawler; contact=you@example.com)
CRAWLER_MAX_PAGES=500
DISCOVERY_REFRESH_AFTER_DAYS=0
IMAGE_MIN_WIDTH=256
IMAGE_MIN_HEIGHT=256
LOG_LEVEL=DEBUG

# Conservative dev overrides
SCRAPY_CONCURRENT_REQUESTS=16
SCRAPY_CONCURRENT_REQUESTS_PER_DOMAIN=1
SCRAPY_DOWNLOAD_DELAY=1
SCRAPY_RANDOMIZE_DOWNLOAD_DELAY=true
SCRAPY_AUTOTHROTTLE_ENABLED=true
SCRAPY_AUTOTHROTTLE_START_DELAY=1
SCRAPY_AUTOTHROTTLE_MAX_DELAY=10
SCRAPY_AUTOTHROTTLE_TARGET_CONCURRENCY=1.0
SCRAPY_DOWNLOAD_TIMEOUT=30
SCRAPY_RETRY_ENABLED=true
SCRAPY_RETRY_TIMES=3

# Optional/future object storage (reserved for Phase 3)
OBJECT_STORE_ENDPOINT=http://minio:9000
OBJECT_STORE_BUCKET=invisible-images
OBJECT_STORE_ACCESS_KEY=change-me
OBJECT_STORE_SECRET_KEY=change-me
OBJECT_STORE_REGION=us-east-1
OBJECT_STORE_SECURE=false
